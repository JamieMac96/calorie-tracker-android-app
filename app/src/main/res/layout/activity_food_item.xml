<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/secondary_toolbar" />

    <TextView
        android:id="@+id/food_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Oats"
        android:textColor="@color/black"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/food_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="desciption for oats"
        android:textColor="@color/black"
        android:padding="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Number of servings"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="93dp"
            android:layout_height="match_parent"
            />

        <EditText
            android:id="@+id/number_of_servings"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:inputType="numberDecimal"
            android:text="1"
            android:maxLength="4"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Serving Size"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/item_serving_size"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:inputType="numberDecimal"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="test"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Fat"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="240dp"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/fat_grams"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:inputType="numberDecimal"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="test"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Carbohydrates"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="138dp"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/carb_grams"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:inputType="numberDecimal"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="test"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Protein"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="205dp"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/protein_grams"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:inputType="numberDecimal"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="test"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Calories"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="195dp"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/total_calories"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:inputType="numberDecimal"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="test"
            />

    </LinearLayout>

    <Button
        android:id="@+id/food_item_submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        />

</LinearLayout>