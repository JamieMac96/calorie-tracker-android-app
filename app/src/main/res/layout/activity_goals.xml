<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimaryLighter">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/secondary_toolbar" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_marginTop="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Starting Bodyweight"
                android:textSize="25dp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="74dp"
                android:layout_height="match_parent"
                />

            <TextView
                android:id="@+id/initial_bodyweight"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:inputType="number"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="none"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Current Bodyweight"
                android:textSize="25dp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="78dp"
                android:layout_height="match_parent"
                />

            <EditText
                android:id="@+id/current_bodyweight"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:inputType="number"
                android:maxLength="3"
                android:text=""
                android:background="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Goal Bodyweight"
                android:textSize="25dp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                />

            <EditText
                android:id="@+id/goal_bodyweight"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:inputType="number"
                android:text=""
                android:maxLength="3"
                android:background="@color/white"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Weekly goal"
                android:textSize="25dp"
                android:textColor="@color/black"

                />
            <TextView
                android:layout_width="6dp"
                android:layout_height="match_parent"
                />
            <Spinner
                android:layout_marginLeft="10dp"
                android:id="@+id/weekly_goal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

            </Spinner>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Activity level"
                android:textSize="25dp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                />
            <Spinner
                android:id="@+id/activity_level"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.97"
                android:background="@color/white">

            </Spinner>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Calorie Goal"
                android:textSize="25dp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="162dp"
                android:layout_height="match_parent"
                />

            <EditText
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:inputType="number"
                android:text="2000"
                android:maxLength="5"
                android:id="@+id/calorie_goal"
                android:background="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Macronutrient Goals: "
                android:textSize="25dp"
                android:id="@+id/macronutrient_goals"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <TextView
                    android:layout_marginLeft="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Fat:"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    />
                <Spinner
                    android:id="@+id/fat_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <TextView
                    android:layout_marginLeft="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Carbs:"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    />

                <Spinner
                    android:id="@+id/carbs_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                </Spinner>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <TextView
                    android:layout_marginLeft="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Protein:"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>
                <Spinner
                    android:id="@+id/protein_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                </Spinner>


            </LinearLayout>

            </LinearLayout>



        <Button
            android:id="@+id/goals_submit_button"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:onClick="attemptUpdateGoals"
            android:background="@color/colorAccent"
            android:textSize="20sp"
            android:textColor="@color/white"/>

    </LinearLayout>
</ScrollView>